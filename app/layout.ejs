  <body>
    <header class="bg-primary py-6 py-lg-5">
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light py-0">
          <div class="container-fluid">
            <a class="navbar-brand" href="index.html">
              <img class="w-50" src="./assets/images/DOYOGA-logo.png" alt="logo">
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link px-4" href="course.html">課程介紹</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link px-4" href="surroundings.html">瑜珈空間</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link px-4" href="#" >當月課表</a>
                </li>
              </ul>
              <div class="d-flex">
                <button class="btn btn-outline-secondary-dark rounded-pill me-4" type="button">立即預約</button>
                <button class="btn btn-outline-secondary-dark rounded-pill" type="button">聯絡我們</button>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>

    <%- contents %>

    <footer class="footer bg-secondary-dark py-9">
      <div class="border-bottom border-white">
        <div class="container">
          <div class="d-flex flex-column flex-lg-row justify-content-lg-between pb-9">
